{
    "deviceName": "ESPWiFi",
    "wifi": {
        "enabled": true,
        "mode": "client",
        "mdns": true,
        "accessPoint": {
            "ssid": "ESPWiFi",
            "password": "espw!!f!!"
        },
        "client": {
            "ssid": "YOUR_WIFI_SSID",
            "password": "YOUR_WIFI_PASSWORD"
        },
        "power": {
            "txPower": 19.5,
            "powerSave": "none"
        }
    },
    "bluetooth": {
        "enabled": false
    },
    "log": {
        "file": "/espwifi.log",
        "level": "debug",
        "enabled": true,
        "useSD": true,
        "maskedKeys": [
            "password",
            "token"
        ]
    },
    "auth": {
        "enabled": false,
        "username": "admin",
        "password": "admin",
        "excludePaths": [
            "/",
            "/static/*",
            "/favicon.ico",
            "/api/auth/login",
            "/asset-manifest.json"
        ],
        "protectedFiles": [
            "static/*",
            "index.html",
            "config.json",
            "asset-manifest.json"
        ],
        "cors": {
            "enabled": true,
            "origins": [
                "https://espwifi.io",
                "*"
            ],
            "methods": [
                "GET",
                "POST",
                "PUT"
            ]
        }
    }
}